{
   "collection": "@nestjs/schematics",
   "sourceRoot": "src",
   "compilerOptions": {
      "assets": ["mail/templates/**/*"],
      "watchAssets": true,
      "plugins": [
         {
            "name": "@nestjs/graphql",
            "options": {
               "typeFileNameSuffix": [".input.ts", ".args.ts"],
               "introspectComments": true
            }
         }
      ]
   }
}
